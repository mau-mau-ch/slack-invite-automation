doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Join the #{community} community on Slack!
    link(href="http://mau-mau.ch/stylesheets/normalize.css", rel="stylesheet", type="text/css")
    link(href="http://mau-mau.ch/stylesheets/style.css", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
  body
    .pure-g
      .pure-u-1
        .header
          h2 Gib deine Email ein um eine Einladung zu unserem Chat zu bekommen.
        form(method="POST", action="/invite")#join-form.form.pure-form
          fieldset
            input(type="text", name="email", placeholder="Email Addresse")#slack-email.field
            input(type="submit", value="Abschicken").submit.pure-button
    script.
      var tokenRequired = #{tokenRequired};
      var form = document.getElementById('join-form');
      var email = document.getElementById('slack-email');
      var token = document.getElementById('slack-token');
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
        if (tokenRequired && !token.value) {
          evt.preventDefault();
        }
      });
